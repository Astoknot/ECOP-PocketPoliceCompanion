<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bellatrix.aditi.e_cop.SignUpActivity">

    <ImageButton
        android:id="@+id/userButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="94dp"
        android:layout_height="88dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/courtButton"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/copButton"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/ic_user_foreground" />

    <ImageButton
        android:id="@+id/copButton"
        android:layout_width="94dp"
        android:layout_height="88dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userButton"
        app:srcCompat="@drawable/ic_cop_foreground" />

    <ImageButton
        android:id="@+id/courtButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="94dp"
        android:layout_height="88dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userButton"
        app:srcCompat="@drawable/ic_court_foreground" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:text="SIGN UP AS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="12dp"
        android:text="User"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/userButton"
        app:layout_constraintStart_toStartOf="@+id/userButton"
        app:layout_constraintTop_toBottomOf="@+id/userButton" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Cop"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/copButton"
        app:layout_constraintStart_toStartOf="@+id/copButton"
        app:layout_constraintTop_toBottomOf="@+id/copButton" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="Court"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/courtButton"
        app:layout_constraintStart_toStartOf="@+id/courtButton"
        app:layout_constraintTop_toBottomOf="@+id/courtButton" />
</android.support.constraint.ConstraintLayout>
